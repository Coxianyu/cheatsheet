% kali,linux,muti

# 安装 gnome 桌面 nstall gnome
apt install kali-desktop-gnome

#  设置系统语言为中文
dpkg-reconfigure locales

#  设置使用 gnome 桌面 switch to gnome
dpkg-reconfigure gdm3

# 删除默认的 xfce 桌面 remove xface
apt remove kali-desktop-xfce xfce4* lightdm*

# 允许 root 登录 root login
apt install kali-root-login

# 安装 copyq 
apt install copyq

# 安装 fcitx 和 google 拼音 install google-pinyin
apt install fcitx fcitx-googlepinyin

# 设置使用 google 拼音 set google pinyin
im-config
